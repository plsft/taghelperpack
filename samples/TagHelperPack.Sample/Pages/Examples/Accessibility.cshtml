                                            <div id="terms-error" 
                                                 a11y-live="polite" 
                                                 a11y-role="alert"
                                                 class="invalid-feedback">
                                            </div>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary">
                                        Submit Form
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>

<style>
.tab-pane {
    min-height: 120px;
